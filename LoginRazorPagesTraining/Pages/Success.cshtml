@page
@model LoginRazorPagesTraining.Pages.SuccessModel
@{
}
<div class="bg-dark text-light d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="d-grid">
                <H3>You are in!</H3>
                <a asp-area="" asp-page="/Index" type="submit" class="btn btn-primary">Back</a>
                <form method="post" asp-page-handler="Logout">
                    <button type="submit" class="btn btn-danger">logout</button>
                </form>
            </div>
            <div class="d-grid">
                <H3>List Users!</H3>
                <table class="table text-light">
                    <thead> 
                        <tr> 
                           <th>Username</th> 
                           <th>ID</th>
                           <th>E-Mail</th>
                        </tr> 
                    </thead> 
                    <tbody> 
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Username</td> 
                                <td>@user.Id</td>
                                <td>@user.Email</td>
                            </tr>
                        } 
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>